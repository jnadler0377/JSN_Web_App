# ===========================================
# JSN Holdings Foreclosure Manager
# Environment Configuration Template
# ===========================================
#
# INSTRUCTIONS:
# 1. Copy this file to .env in your project root
# 2. Update the values below for your environment
# 3. Never commit .env to version control!
#

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Path to SQLite database file
# Can be absolute or relative path
# Examples:
#   Windows absolute: C:/pascowebapp/foreclosures.db
#   Linux absolute: /var/lib/pascowebapp/foreclosures.db
#   Relative: foreclosures.db (will be created in project root)
DATABASE_PATH=C:/pascowebapp/foreclosures.db

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Application environment (development, staging, production)
ENVIRONMENT=development

# Enable debug mode (True/False)
DEBUG=True

# Application name
APP_NAME=JSN Holdings Foreclosure Manager

# ===========================================
# SECURITY SETTINGS
# ===========================================

# Secret key for session encryption and JWT tokens
# IMPORTANT: Generate a new random key for production!
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-THIS-TO-A-RANDOM-SECRET-KEY-IN-PRODUCTION

# JWT token algorithm
ALGORITHM=HS256

# Access token expiration time (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# EXTERNAL API KEYS
# ===========================================

# BatchData API credentials
BATCHDATA_API_KEY=your-batchdata-api-key-here
BATCHDATA_BASE_URL=https://api.batchdata.com

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================

# Directory for uploaded files (relative to project root)
UPLOAD_DIR=uploads

# Maximum file upload size in bytes (default: 10MB)
MAX_UPLOAD_SIZE=10485760

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/app.log

# ===========================================
# CORS SETTINGS
# ===========================================

# Allowed CORS origins (comma-separated)
# Example: http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ===========================================
# EMAIL SETTINGS (Optional - for password reset)
# ===========================================

# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=noreply@jsnholdings.com
# SMTP_FROM_NAME=JSN Holdings Support
